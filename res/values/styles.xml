<resources xmlns:android="http://schemas.android.com/apk/res/android">
	
	<style name="App" />
	
	<style name="App.Base" parent="@android:style/Theme.Holo">
		<item name="android:actionBarStyle">@style/Widget.App.ActionBar</item>
		<item name="android:windowBackground">@color/window_bg</item>
	</style>
	
	<style name="App.Theme" parent="App.Base">
		
	</style>
	
	<style name="App.Base.Picture" parent="App.Theme">
		<item name="android:windowActionBarOverlay">true</item>
		<item name="android:windowContentOverlay">@null</item>
	</style>
	
	<style name="App.Theme.Picture" parent="App.Base.Picture">
		
	</style>
	
	<style name="Widget.App.ActionBar" parent="@android:style/Widget.Holo.ActionBar.Solid">
		<item name="android:background">@drawable/ab_background</item>
		<item name="android:titleTextStyle">@style/Widget.App.ActionBarTitle</item>
		<item name="android:subtitleTextStyle">@style/Widget.App.ActionBarSubtitle</item>
	</style>
	
	<style name="Widget.App.ActionBarTitle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
		<item name="android:textColor">@color/title</item>
	</style>
	
	<style name="Widget.App.ActionBarSubtitle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Subtitle">
		<item name="android:textColor">@color/subtitle</item>
	</style>
	
</resources>
